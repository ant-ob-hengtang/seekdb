[Unit]
Description=oceanbase

[Service]
User=root
Type=notify
ExecStart=/usr/libexec/oceanbase/scripts/oceanbase_systemd_start
ExecStop=/usr/libexec/oceanbase/scripts/oceanbase_systemd_stop
PIDFile=/var/lib/oceanbase/run/observer.pid
NotifyAccess=all
Restart=on-failure
RestartSec=3
LimitNOFILE=infinity
LimitNPROC=infinity
LimitCORE=infinity
LimitSTACK=infinity

[Install]
WantedBy=multi-user.target
